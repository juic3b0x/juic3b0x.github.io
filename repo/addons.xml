<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.myvideolinks" version="1.0.0" name="MyVideoLinks" provider-name="agentklepto">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.resolveurl" version="5.1.0"/>
        </requires>

        <extension point="xbmc.python.pluginsource" library="resources/lib">
            <provides>video</provides>
        </extension>

        <extension point="xbmc.addon.metadata">
            <summary>MyVideoLinks Kodi Addon</summary>
            <description>Search and play videos from MyVideoLinks.</description>
            <platform>all</platform>
            <language>en</language>
            <license>GPL-2.0-or-later</license>
            <forum>https://forum.kodi.tv/showthread.php?tid=ADDON_THREAD_ID</forum>
            <website>https://juic3b0x.github.io</website>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </extension>

        <extension point="xbmc.addon.repository">
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>
